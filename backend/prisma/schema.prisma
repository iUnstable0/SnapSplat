generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  email String @unique
  displayName String
  role  String @default("user") // user, admin

  emailVerified Boolean @default(false)

  profilePicture String @default("placeholder")

  passwordSession String @unique @default(uuid())
  accountSession  String @unique @default(uuid())

  createdAt DateTime @default(now())
  password  String
  userId    String   @unique @default(uuid())

  sessions        Session[]
  suspendedTokens SuspendedToken[]
}

model Session {
  id Int @id @default(autoincrement())

  userId    String
  sessionId String   @unique @default(uuid())
  hash      String   @unique
  expiresAt DateTime

  user User @relation(fields: [userId], references: [userId])

  @@index([userId])
}

model SuspendedToken {
  id Int @id @default(autoincrement())

  tokenId     String   @unique
  reason      String
  suspendedAt DateTime @default(now())

  user User @relation(fields: [tokenId], references: [userId])

  @@index([tokenId])
}
