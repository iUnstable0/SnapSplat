.pageWrapper {
  border-radius: 10px;
  overflow: hidden;
}

.mainContent {
  display: flex;
  height: 100vh;
}

.pageTitle {
  font-size: 36px;
  font-weight: 600;

  padding: 24px;
}

.galleryContainer {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  align-content: flex-start;
  padding: 24px;

  /* pointer-events: none; */

  /* background: red; */
}

